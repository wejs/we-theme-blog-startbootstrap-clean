<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('/core/images/bgs/home-bg.jpg')" >
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>{{t "Create account"}}</h1>
          <hr class="small">
          <span class="subheading">{{subTitle}}</span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <div class="form-signup">

        {{we-sys-messages messages=messages}}

        <form  {{action "submit" on="submit"}} name="createAccountForm" class="user-signup-form" method="POST">
          <h4>Informações nescessárias para criação da conta:</h4>
          <!-- input: username -->
          <div class="form-group">
            <div class="input-group">
              <label for="name" class="input-group-addon">
                <span class="glyphicon glyphicon-user"></span>
              </label>
              {{input name="username" value=user.username  type="text" placeholderTranslation="auth.register.username.label" required="true" classNames="form-control input-lg"}}
            </div>
          </div>
          <!-- /input: username -->

          <!-- input: email -->
          <div class="form-group">
            <div class="input-group">
              <label for="email" class="input-group-addon">
                <span class="glyphicon glyphicon-envelope"></span>
              </label>
              {{input name="email" value=user.email  type="email" placeholderTranslation="auth.register.email.label" classNames="form-control input-lg" required="true"}}
            </div>
          </div>
          <!-- /input: email -->


          <!-- input: confirm email -->
          <div class="form-group">
            <div class="input-group">
              <label for="confirmEmail" class="input-group-addon">
                <span class="glyphicon glyphicon-envelope"></span>
              </label>
              {{input name="confirmEmail" value=user.confirmEmail  type="email" placeholderTranslation="auth.register.confirmEmail.label" classNames="form-control input-lg" required="true"}}
            </div>
          </div>
          <!-- input: confirm-email -->

          <!-- input: password -->
          <div class="form-group">
            <div class="input-group">
              <label for="password" class="input-group-addon">
                <span class="glyphicon glyphicon-lock"> </span>
              </label>
              {{input name="password" value=user.password  type="password" placeholderTranslation="auth.register.password.label"  required="true" classNames="form-control input-lg"}}

              <!-- input: confirm-password -->
              <label for="confirm-password" class="sr-only input-group-btn">

              </label>
              {{input name="confirmPassword" value=user.confirmPassword  type="password" placeholderTranslation="auth.register.confirmPassword.label" required="true" classNames="form-control input-lg"}}
              <!-- /input: confirm-password -->
            </div>
          </div>
          <!-- /input: password -->
          <hr>
          <h4>Informações opcionais:</h4>
          <!-- input: displayName -->
          <div class="form-group">
            <div class="input-group">
              <label for="displayName" class="input-group-addon">
                <span class="glyphicon glyphicon-user"></span>
              </label>
              {{input name="displayName" value=user.displayName  type="text" placeholderTranslation="auth.register.displayName.label" required="true" classNames="form-control input-lg"}}
            </div>
          </div>
          <!-- /input: displayName -->

          <hr>

          <div class="form-group">
            <div class="input-group">
              <label for="language" class="input-group-addon">
                <span class="glyphicon glyphicon-globe"></span> {{t 'auth.register.language.label'}}
              </label>
              {{view "select" name="language" value=user.language content=defaultlanguages classNames="form-control input-md"}}
            </div>
          </div>

          <hr>

          {{we-sys-messages messages=messages}}

          <div class="form-group">
            <div class="input-group">
              <button name="registerUser" class="btn btn-lg btn-success" type="submit">
                {{t "Sign up"}}
                <span class="glyphicon glyphicon-chevron-right"> </span>
              </button>
            </div>
          </div>

        </form>

      </div>

    </div>
  </div>
</div>