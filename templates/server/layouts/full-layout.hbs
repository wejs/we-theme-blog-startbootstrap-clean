<header class="intro-header"
  {{#each data.featuredImage}}
    style="background-image: url('{{urls.original}}')"
  {{else}}
    {{#if req.we.config.site.homeBg}}
      style="background-image: url('{{req.we.config.site.homeBg}}')"
    {{else}}
      style="background-image: url('/public/theme/we-theme-blog-startbootstrap-clean/img/home-bg.jpg')"
    {{/if}}
  {{/each}}
>

</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-12">
      {{#region 'highlighted'}}{{/region}}
    </div>
    <div class="col-md-9 col-lg-9">
      <div>{{we-breadcrumb locals=this}}</div>

      <div id="sysMessagesArea">{{{we-messages}}}</div>

      {{#region 'beforeContent'}}{{/region}}
      <div id="content" role="main">{{{body}}}</div>
      {{#region 'afterContent'}}{{/region}}
    </div>

    <div class="col-md-3 col-lg-3">
      {{#region 'sidebar'}}{{/region}}
    </div>
  </div>
</div>